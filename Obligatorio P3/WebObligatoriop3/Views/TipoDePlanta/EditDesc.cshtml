@model Dominio.EntidadesNegocio.TipoDePlanta

@{
    ViewData["Title"] = "EditDesc";
}

<h1>Editar Descripcion del Tipo de Planta</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDesc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
                <div class="form-group my-4">
                    <label asp-for="Nombre" readonly class="control-label font-weight-bold"></label>
                    <input asp-for="Nombre" readonly class="form-control"  />
                    <span asp-validation-for="Nombre" readonly class="text-danger"></span>
                </div>
            <div class="form-group my-4">
                <label asp-for="Descripcion" class="control-label font-weight-bold"></label>
                <textarea asp-for="Descripcion" class="form-control"> </textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BuscarPorNombre">Volver a la Busqueda</a>
</div>

@if (ViewBag.ResultadoOk != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.ResultadoOk
    </div>
}

@if (ViewBag.ResultadoError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ResultadoError
    </div>
}



@section Scripts {

    <script type="text/javascript">

    function openSuccesModal(mensajeError) {
        document.getElementById('mensajeModalError').innerHTML = mensajeError;
        $('#myModalError').modal('show');
        }

    $(document).ready(function () {
        var msgError = "@TempData["MensajeError"]";
        if (msgError)
            openSuccesModal(msgError);
    });
    </script>
    

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

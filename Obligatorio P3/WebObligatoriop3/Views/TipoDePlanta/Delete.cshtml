@model Dominio.EntidadesNegocio.TipoDePlanta

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
<hr />

<h3 class="my-5">¿Esta seguro que desea eliminar el Tipo de Planta?</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2 my-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger mt-3" /> <br><br>
        <a asp-action="ListaTiposDePlanta"  class="btn btn-dark">Volver a la Lista</a>
    </form>
</div>

@section Scripts {
    <script type="text/javascript">

    function openSuccesModal(mensajeError) {
        document.getElementById('mensajeModalError').innerHTML = mensajeError;
        $('#myModalError').modal('show');
        }

    $(document).ready(function () {
        var msgError = "@TempData["MensajeError"]";
        if (msgError)
            openSuccesModal(msgError);
    });
    </script>
}